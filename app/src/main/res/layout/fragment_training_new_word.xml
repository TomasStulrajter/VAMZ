<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingNewWordFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:ellipsize="end"
        android:ems="10"
        android:text="@string/new_word"
        android:textSize="20sp"
        style="@style/textStyle"/>

    <ImageView
        android:id="@+id/new_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/new_word"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:ellipsize="end"
        android:ems="10"
        android:text="Nove slovo"
        android:textSize="25sp"
        style="@style/textStyle"/>

    <TextView
        android:id="@+id/new_translation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:ellipsize="end"
        android:ems="10"
        android:text="preklad"
        android:textSize="20sp"
        style="@style/textStyle"/>

    <Button
        android:id="@+id/learn_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="@string/remember"
        android:background="@drawable/button_border"
        style="@style/buttonStyle"/>

</LinearLayout>